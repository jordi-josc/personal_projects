<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_cancel_wizard_form" model="ir.ui.view">
        <field name="name">sale.cancel.wizard.form</field>
        <field name="model">sale.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason for Cancellation">
                <group>
                    <p class="text-muted">
                        Please specify why this quotation is being cancelled.
                    </p>
                </group>
                <group>
                    <field name="note" nolabel="1" placeholder="Write your reason here..."/>
                </group>
                <footer>
                    <button string="Confirm Cancellation" name="action_confirm_cancel" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>